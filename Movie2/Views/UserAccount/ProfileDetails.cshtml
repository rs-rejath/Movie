@model DataAccessLayer.ApplicationContext.UserAccount

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color: #4CAF50;">Profile Details</h2>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm" style="border-radius: 10px; background-color: #ffffff;">
                <div class="card-body">
                    <h5 class="card-title text-center" style="color: #4CAF50;">Hello, @Model.User_Name!</h5>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Phone:</strong> @Model.Phone</p>
                    <p class="card-text"><strong>Street:</strong> @Model.Street</p>
                    <p class="card-text"><strong>City:</strong> @Model.City</p>
                    <p class="card-text"><strong>Post Code:</strong> @Model.PostCode</p>

                  
                    <div class="text-center">
                        <a asp-action="EditProfile" asp-route-id="@Model.User_Id" class="btn btn-light" style="background-color: #4CAF50; color: white; border-radius: 5px;">
                            Edit Profile
                        </a>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Purchase" asp-action="PastOrders" class="btn btn-light mt-2" style="background-color: #FF9800; color: white; border-radius: 5px;">
                            Past Orders
                        </a>
                    </div>
                    @if (!Model.SubscriptionStatus)
                    {
                        <div class="text-center">
                            <a asp-controller="Subscription" asp-action="Subscribe" class="btn btn-success mt-2" style="border-radius: 5px;">
                                Subscribe
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9f9f9; 

    h2 {
        font-family: 'Arial', sans-serif;
        color: #4CAF50; 
    }

    .card {
        transition: transform 0.2s; 
    }

        .card:hover {
            transform: scale(1.02); 
        }

    .card-body {
        padding: 30px;
    }

    .card-text {
        font-size: 1.1rem;
        color: #555; 

    .btn-light {
        transition: background-color 0.3s;
    }

        .btn-light:hover {
            background-color: #45a049; 
            color: white; 
        }
</style>
