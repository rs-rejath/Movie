@model BuissinessLogicLayer.ReviewModel

<div class="container mt-5">
    <h2 class="text-center">Add a Review for @Model.Movie_Name</h2>

    <form asp-action="AddReview" method="post">
        <div class="form-group">
            <label for="Review_Description">Your Review</label>
            <textarea asp-for="Review_Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Review_Description" class="text-danger"></span>
        </div>

        @* Display movie details in read only  *@
        <div class="form-group">
            <label for="Movie_Name">Movie Name</label>
            <input asp-for="Movie_Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label for="Language">Language</label>
            <input asp-for="Language" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label for="Genre">Genre</label>
            <input asp-for="Genre" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label for="Director">Director</label>
            <input asp-for="Director" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label for="Cast">Cast</label>
            <input asp-for="Cast" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label for="Descriptiom">Description</label>
            <textarea asp-for="Descriptiom" class="form-control" readonly rows="3"></textarea>
        </div>

        <div class="form-group">
            <label for="Image">Movie Poster</label>
            <img src="@Url.Content("~/" + Model.Image)" alt="Movie Poster" class="img-fluid" />
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <textarea asp-for="Price" class="form-control" readonly rows="3"></textarea>
        </div>

         @* To ensure these values are posted along with the form *@ 
        <input type="hidden" asp-for="Movie_Name" />
        <input type="hidden" asp-for="Language" />
        <input type="hidden" asp-for="Genre" />
        <input type="hidden" asp-for="Director" />
        <input type="hidden" asp-for="Cast" />
        <input type="hidden" asp-for="Descriptiom" />
        <input type="hidden" asp-for="Image" />
        <input type="hidden" asp-for="Price" />

        
        <input type="hidden" asp-for="Movie_Id" />
        <input type="hidden" asp-for="User_Id" />

        <button type="submit" class="btn btn-primary mt-3">Submit Review</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
