@{
    ViewData["Title"] = "Home Page";
}

<style>
    .homepage-container {
        height: 100vh; 
        width: 100%;
        background-image: url('/Images/Home%20page.jpg'); 
        background-size: cover; /* Cover the entire container */
        background-position: center; /* Center the image */
        padding: 60px; 
        color: white; 
        display: flex; /* Use flexbox for centering */
        flex-direction: column; /* Stack elements vertically */
        justify-content: center; /* Center vertically */
        align-items: center; /* Center horizontally */
        text-align: center;
    }

    .homepage-message {
        font-size: 1.2rem;
        color: #ffffff; 
        margin-bottom: 20px; 
    }

    .btn-custom {
        padding: 10px 20px;
        font-size: 1.2rem;
        margin: 0; 
        border-radius: 5px;
        background-color: #4CAF50; 
        color: white;
        transition: background-color 0.3s, color 0.3s; 
        border: none; 
    }

        .btn-custom:hover {
            background-color: #45a049; /* Darker green on hover */
        }
</style>



<div class="container homepage-container text-center">
   
    <a asp-controller="Movie" asp-action="MovieList" class="btn btn-success btn-custom">Browse</a>
    <p class="homepage-message">
        Login and subscribe to PREMIUM MEMBERSHIP to access Extra Content for free.
    </p>
</div>
